@* Stellt die Seite dar um ein neues Dashboard anzulegen *@

@model IEnumerable<KPI_Dashboard.Models.Kpi>

@{
    ViewData["Title"] = "Neues Dashboard";
}

@section Scripts{
    <script src="~/js/dashboardsNew.js" type="text/javascript" asp-append-version="true"></script>
}

<link rel="stylesheet" href="~/css/dashboardsNew.css" type="text/css" asp-append-version="true" />

@section Heading {
    Neues Dashboard
}

<div class="container-fluid">
    <form asp-controller="Dashboards" asp-action="New" method="post">
        <div class="cells-table">
            <div class="new-dashboard-buttons">
                <input class="button-submit" name="submit" id="submit" type="submit" value="Zurück" />
                <input class="button-submit" name="submit" id="add" type="submit" value="Hinzufügen" />
                <div class="input-warning">Name und Titel dürfen nicht leer sein</div>
            </div>
            <hr />
            <div class="properties">
                Name: <input type="text" name="Name" id="name" placeholder="Name eingeben" />
                Titel: <input type="text" name="Title" id="title" placeholder="Titel eingeben" />
            </div>
            <div class="live-search">
                <input type="text" name="Search" id="search" placeholder="Suchen" />
            </div>

            <table class="table table-striped table-spacing">
                <thead>
                    <tr>
                        <th>Produktionszellen</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="table-row">
                                <input name="Cells" id="@Html.DisplayFor(modelItem => item.CellDescription)" type="checkbox" value="@Html.DisplayFor(modelItem => item.CellDescription)" /> <div class="table-row-text">@Html.DisplayFor(modelItem => item.CellDescription)</div><br />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
