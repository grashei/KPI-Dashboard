@* Stellt die Seite für Einstellungen dar*@

@model IEnumerable<KPI_Dashboard.Models.Kpi>

@{
    ViewData["Title"] = "Einstellungen";
}

@section Scripts{
    <script src="~/js/settings.js" type="text/javascript" asp-append-version="true"></script>
}

@section Heading {
    Einstellungen
}

<link rel="stylesheet" href="~/css/settings.css" type="text/css" asp-append-version="true" />

<div class="container-fluid">
    <form method="post">
        <div class="cells-table">

            <div class="setting-buttons">
                <input name="submit" class="button-back" id="back" type="submit" value="Zurück" />
                <input name="submit" class="button-submit" id="save" type="submit" value="Speichern" />
                <input name="submit" class="button-delete" id="delete" type="submit" value="Löschen" />
                <div class="input-warning">Name und Titel dürfen nicht leer sein</div>
            </div>
            <hr />
            <div class="properties">
                Name: <input type="text" name="Name" id="name" placeholder="Name ändern" />
                Titel: <input type="text" name="Title" id="title" placeholder="Titel ändern" />
            </div>

            <div class="live-search">
                <input type="text" name="Search" id="search" placeholder="Suchen" />
            </div>

            <table class="table table-striped table-spacing">

                <thead>
                    <tr>
                        <th>Produktionszellen</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="table-row">
                                <input name="Cells" id="@Html.DisplayFor(modelItem => item.CellDescription)" type="checkbox" value="@Html.DisplayFor(modelItem => item.CellDescription)" /> <div class="table-row-text">@Html.DisplayFor(modelItem => item.CellDescription)</div><br />
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </form>
</div>

